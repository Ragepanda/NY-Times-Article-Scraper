 {{#each article}} {{#unless saved}}
<div data-_id="{{_id}}" class="card">
    <div class="card-header">
        <h3>
            <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{link}}">{{title}}</a>
            <a class="btn btn-success save">Save Article</a>
        </h3>
    </div>
    <div class="card-body">
        {{summary}}
        <br>

        <ul class="list-group">

            <form class="note">
                <input type="text" name="note" class="note-field" data-_id="{{_id}}">
                <a class="btn btn-danger note-submit">Submit Note</a>
            </form>

            {{#if note}} {{#each note}} {{/each}} {{/if}}
        </ul>

    </div>

    <br>

</div>
{{/unless}} {{/each}}